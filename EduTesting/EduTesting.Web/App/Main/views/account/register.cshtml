<div ng-controller="app.views.account.register as vm">
    <form ng-submit="submit()" role="form" name="register" class="form-horizontal" novalidate>
        <div class="form-group" ng-class="{'has-error': register.name.$dirty && register.name.$invalid, 'has-success': register.name.$dirty && !register.name.$invalid}">
            <label for="register-name" class="control-label col-xs-2">Name:</label>
            <div class="col-xs-10">
                <input type="text" name="name" ng-model="user.name" id="register-name" class="form-control" required />
                <span ng-show="register.name.$dirty && register.name.$error.required" class="help-block">Username is required.</span>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error': register.email.$dirty && register.email.$invalid, 'has-success': register.email.$dirty && !register.email.$invalid}">
            <label for="register-email" class="control-label col-xs-2">Email:</label>
            <div class="col-xs-10">
                <input type="email" name="email" ng-model="user.email" id="register-email" class="form-control" required />
                <span ng-show="register.email.$dirty && register.email.$error.required" class="help-block">Email is required.</span>
                <span ng-show="register.email.$dirty && register.email.$error.email" class="help-block">Please enter a valid email address.</span>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error': register.password.$dirty && register.password.$invalid, 'has-success': register.password.$dirty && !register.password.$invalid}">
            <label for="register-password" class="control-label col-xs-2">Password:</label>
            <div class="col-xs-10">
                <input type="password" name="password" ng-model="user.password" id="register-password" class="form-control" required />
                <span ng-show="register.password.$dirty && register.password.$error.required" class="help-block">Password is required.</span>
            </div>
        </div>

        <div class="form-group" ng-class="{'has-error': register.password_c.$dirty && register.password_c.$invalid, 'has-success': register.password_c.$dirty && !register.password_c.$invalid}">
            <label for="register-password-c" class="control-label col-xs-2">Confirm:</label>
            <div class="col-xs-10">
                <input type="text" name="password_c" ng-model="password_c" id="register-password-c" class="form-control" required/>
                <span ng-show="register.password_c.$dirty && register.password_c.$error.required" class="help-block">Repeat password.</span>
                <span ng-show="register.password_c.$dirty && register.password_c.$error.equal && !register.password_c.$error.required" class="help-block">Password and confirmation must match.</span>
            </div>
        </div>
<button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

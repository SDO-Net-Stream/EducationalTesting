<div ng-controller="app.views.test.list as vm">
    <accordion close-others="false">
        <accordion-group ng-repeat="test in tests" is-open="test.isopened">
            <accordion-heading>
                <div class="width:100%">
                    {{test.testName}}
                    <strong ng-if="test.testStatusCode == 'Pending'">[Penging]</strong>
                    <div style="float: right">
                        <a class="glyphicon glyphicon-pencil" ui-sref="test.edit({test: test.testId})" ng-click="$event.stopPropagation();"></a>
                        <button class="glyphicon glyphicon-remove btn-link" ng-click="deleteTest(test); $event.stopPropagation();"></button>
                    </div>
                </div>
            </accordion-heading>
            <div ng-if="test.result && vm.resultLoaded(test)"></div>
            <div ng-include="'/App/Main/views/test/result.cshtml'">
                loading
            </div>
        </accordion-group>
    </accordion>
    <a class="btn btn-primary" ui-sref="test.edit({test: 'new'})">Create new test</a>
    <script id="app.views.test.list.delete.html" style="display: none" type="text/ng-template">
        <form ng-submit="ok()" name="form" class="form-horizontal">
            <div class="modal-header">
                <h3 class="modal-title">Delete test</h3>
            </div>
            <div class="modal-body">
                Are you sure you want to delete test '{{model.testName}}'?
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Delete</button>
                <button type="button" class="btn" ng-click="cancel()">Cancel</button>
            </div>
        </form>
    </script>
</div>

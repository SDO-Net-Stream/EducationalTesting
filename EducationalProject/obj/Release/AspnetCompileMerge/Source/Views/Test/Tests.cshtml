@{
    ViewBag.Title = "Tests";
}
@model List<EducationalProject.Models.TestInfoWrapper>

<h2>Tests</h2>

<table id="tblTests" class="tableStyle">
    @if (Model.Count > 0)
    {
        <tr>
            <th class="tableHeader">Test Name</th>
            <th class="tableHeader">QuestionsCount </th>
            <th class="tableHeader">Actions</th>
        </tr>
        foreach (var item in Model)
         {
             <tr>
                 <td class="tableCell">@item.TestName </td>
                 <td class="tableCell">@item.CountQuestions</td>       
                 <td class="tableCell">
                     @Html.ActionLink("Start", "StartTest", new {id = item.TestId}, new
                     {
                         onclick = "return confirm('Are you sure you want to start this Test?');"
                     })            
                 </td>
             </tr>
         }
    }
 </table>